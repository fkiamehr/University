@page
@model University.Web.Pages.Students.CreateStudentsModel
@{
    ViewData["Title"] = "ثبت نام دانشجویان";

}
<div class="row">
    <form method="post" >
       
        <div class="col-md-8">
            <h2>اطلاعات دانشجویان</h2>
            <hr />
            <div class="form-group">
                <label>نام </label>
                <input type="text" asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name"></span>
            </div>
            <div class="form-group">
                <label>نام خانوادگی</label>
                <input type="text" asp-for="Student.Family" class="form-control" />
                <span asp-validation-for="Student.Family"></span>
            </div>
            <div class="form-group">
                <label>مقطع</label>
                <select class="form-control" asp-for="Student.LevelId" asp-items="@(ViewData["Levels"] as SelectList)"></select>
                <span asp-validation-for="Student.LevelId"></span>
            </div>
          
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
        </div>
      
    </form>
    
</div>